{
  "extends": ["@commitlint/config-conventional"],
  "formatter": "@commitlint/format",
  "rules": {
    "type-enum": [2, "always", [
      "build",
      "ci",
      "chore",
      "docs",
      "feat",
      "fix",
      "merge",
      "perf",
      "refactor",
      "revert",
      "style",
      "test",
      "wip"
    ]],
    "type-case": [2, "always", ["lowercase", "lower-case"]],
    "type-empty": [2, "never"],
    "scope-case": [2, "always", ["lowercase", "lower-case"]],
    "subject-case": [2, "never", []],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."]
  }
}
